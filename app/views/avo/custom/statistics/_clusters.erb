<div class="px-4">
  <% @running_clusters_count = Cluster.where(status: :running).count %>
  <% @failed_clusters_count = Cluster.where(status: :failed).count %>
  <% @total_clusters_count = Cluster.count %>
  <p class="text-sm text-gray-500 mb-2">Running / Failed / Total Clusters</p>
  <p class="text-2xl font-bold">
   <span class="text-green-500"><%= @running_clusters_count %></span> /
   <span class="text-red-500"><%= @failed_clusters_count %></span> /
   <%= @total_clusters_count %>
  </p>
</div>