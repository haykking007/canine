<div class="flex justify-center items-center min-h-screen bg-base-200">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-control">
          <%= f.text_field :name, autofocus: true, class: 'input input-bordered w-full', placeholder: "Full name" %>
        </div>

        <div class="form-control">
          <%= f.email_field :email, autocomplete: "email", class: 'input input-bordered w-full', placeholder: "Email Address" %>
        </div>

        <div class="form-control">
          <%= f.password_field :password, autocomplete: "new-password", class: 'input input-bordered w-full', placeholder: 'Password' %>
        </div>

        <div class="form-control">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-bordered w-full', placeholder: 'Confirm Password' %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
