    <div class="flex flex-row gap-4">
      <div class="skeleton h-10 w-32"></div>
      <div class="skeleton h-10 w-full"></div>
    </div>
    <div class="flex flex-row gap-4">
      <div class="skeleton h-10 w-32"></div>
      <div class="skeleton h-10 w-full"></div>
    </div>
  <% else %>
    <div class="flex flex-row gap-4">
      <div class="skeleton h-10 w-32"></div>
      <div class="skeleton h-10 w-28"></div>
      <div class="skeleton h-10 w-full"></div>
      <div class="skeleton h-10 w-28"></div>
    </div>
    <div class="flex flex-row gap-4">
      <div class="skeleton h-10 w-32"></div>
      <div class="skeleton h-10 w-28"></div>
      <div class="skeleton h-10 w-full"></div>
