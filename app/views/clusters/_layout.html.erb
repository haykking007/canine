<div>
  <div class="flex items-center justify-between mb-4">
    <div>
      <h3 class="text-lg font-medium"><%= cluster.name %></h3>
      <%= render "clusters/status", cluster: cluster %>
      <div class="mt-1">
        <%= render "clusters/info", cluster: @cluster %>
      </div>
    </div>
    <div class="flex">
      <%= turbo_frame_tag "test_connection_frame" do %>
        <%= button_to "Test Connection", test_connection_cluster_path(@cluster), class: "btn btn-ghost m-1" %>
      <% end %>
    </div>
  </div>
  <div class="md:card md:card-bordered md:bg-base-100">
    <div class="md:card-body overflow-x-auto">

      <div class="block w-full">
        <%= render "clusters/sidebar", cluster: cluster %>
        <div class="pt-4 pb-4">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
