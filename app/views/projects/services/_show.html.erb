<div>
  <%= form_with(model: [service.project, service]) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "input input-bordered", required: true, placeholder: "ex: web" %>
    </div>
    <div class="form-group">
      <%= form.label :command %>
      <%= form.text_field :command, class: "input input-bordered", required: false %>
    </div>
    <% if service.web_service? %>
      <div class="my-8">
        <h2 class="text-lg my-2">Networking</h2>
          <div class="form-group">
            <%= form.label :container_port %>
            <%= form.text_field :container_port, class: "input input-bordered", required: false %>
          </div>
          <div class="form-group">
            <%= render "projects/services/domains/index", project: service.project, form: form, service: service %>
          </div>
      </div>
    <% end %>
  <% end %>
</div>
