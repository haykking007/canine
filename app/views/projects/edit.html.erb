<%= content_for :title, t("scaffold.edit.title", model: "Project") %>

<%= project_layout(@project) do %>
  <div class="text-right mb-4">
    <%= button_to @project, method: :delete, class: "btn btn-secondary btn-sm", form: { data: { turbo_confirm: t("are_you_sure") } } do %>
      <iconify-icon icon="lucide:trash" height="20" class="text-error-content"></iconify-icon>
      Delete
    <% end %>
  </div>

  <div class="card card-bordered bg-base-100">
    <div class="card-body">
      <%= render "form", project: @project %>
    </div>
  </div>
<% end %>
