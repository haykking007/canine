<div class="px-4" style="border-right: 1px solid #e0e0e0;">
  <% @deployed_projects_count = Project.where(status: :deployed).count %>
  <% @total_projects_count = Project.count %>
  <p class="text-sm text-gray-500 mb-2">Deployed / Total Projects</p>
  <p class="text-2xl font-bold">
    <span class="text-green-500"><%= @deployed_projects_count %></span> /
    <%= @total_projects_count %>
  </p>
</div>