<!-- How to represent an add_on on other surfaces -->
<%= link_to add_on_path(add_on) do %>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">
        <%= add_on.name %>
      </h2>
      <p class="card-text">
        <%= render "add_ons/status", add_on: add_on %>
        <%= add_on.chart_type.titleize %>
      </p>
    </div>
  </div>
<% end %>