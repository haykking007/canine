<div class="tabs tabs-bordered mb-3" role="tablist">
  <%= link_to  add_on_url(add_on), class: "tab hover:bg-base-content/15 #{'tab-active' if current_page?( add_on_url(add_on))}" do %>
    <div class="flex items-center gap-2">
      Info
      <iconify-icon icon="lucide:package"></iconify-icon>
    </div>
  <% end %>
  <%= link_to add_on_processes_url(add_on), class: "tab hover:bg-base-content/15 #{'tab-active' if current_page?(add_on_processes_url(add_on))}" do %>
    <div class="flex items-center gap-2">
      Processes
      <iconify-icon icon="lucide:cpu"></iconify-icon>
    </div>
  <% end %>
  <%= link_to edit_add_on_url(add_on), class: "tab hover:bg-base-content/15 #{'tab-active' if current_page?(edit_add_on_url(add_on))}" do %>
    <div class="flex items-center gap-2">
      Settings
      <iconify-icon icon="lucide:settings"></iconify-icon>
    </div>
  <% end %>
</div>
