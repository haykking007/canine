<div class="mt-32 sm:mt-56">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl sm:text-center">
      <h2 class="text-base font-semibold leading-7 text-indigo-400">Use your own compute</h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">Stop paying for third party apps, just host it yourself</p>
      <p class="mt-6 text-lg leading-8 text-gray-300">Browse the packages that can be hosted within your Kubernetes cluster, at no additional cost.</p>
    </div>
  </div>
  <div class="relative overflow-hidden pt-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <img src="https://tailwindui.com/img/component-images/dark-project-app-screenshot.png" alt="App screenshot" class="mb-[-12%] rounded-xl shadow-2xl ring-1 ring-white/10" width="2432" height="1442">
      <div class="relative" aria-hidden="true">
        <div class="absolute -inset-x-20 bottom-0 bg-gradient-to-t from-gray-900 pt-[7%]"></div>
      </div>
    </div>
  </div>
  <div class="mx-auto mt-16 max-w-7xl px-6 sm:mt-20 md:mt-24 lg:px-8">
    <div class="flex gap-4">
      <% K8::Helm::Client::CHARTS['helm']['charts'].each do |chart| %>
        <div class="">
          <figure class="px-4 pt-4 overflow-visible">
            <div class="w-full flex items-center justify-center">
              <img
                src="<%= chart['logo'] %>" alt="<%= chart['name'] %>"
                class="h-[100px] object-contain"
              />
            </div>
          </figure>
          <div class="text-center text-lg font-bold mt-4">
            <%= chart['name'].titleize %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>