<% if add_on.installing? %>
<div class="card card-bordered bg-base-100">
  <div class="card-body">
    <div class="flex flex-col items-center justify-center">
      <%= render "add_ons/installing" %>
      <div class="mt-4 text-lg">
        Your add-on is installing... Go grab a coffee, this could take a while.
      </div>
    </div>
  </div>
</div>
<% else %>
  <div>
    <div class="flex items-center justify-between mb-4">
      <div>
        <div class="text-sm">
          <%= render "add_ons/status", add_on: @add_on %>
        </div>
        <h1 class="text-lg font-medium">
          <%= @add_on.name %>
        </h1>
        <div class="text-sm">
          <%= @add_on.chart_type %>
          <span class="ml-6"><iconify-icon icon="devicon:kubernetes"></iconify-icon></iconify-icon> <%= link_to add_on.cluster.name, add_on.cluster, target: "_blank", class: "underline" %></span>
        </div>
      </div>
    </div>

    <div class="card card-bordered bg-base-100">
      <div class="card-body">
        <!-- Sidebar -->
        <%= render "add_ons/sidebar", add_on: add_on %>
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>
